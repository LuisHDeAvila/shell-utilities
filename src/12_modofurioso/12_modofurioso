#!/bin/bash
# Desactiva temporalmente el aslr, para sesiones de "kernel exploiting"

function ojosfuriosos()
{
echo '   :.:.:.:. ----= Hack the world =---- .:.:.:.:'
echo -e "\n\nASLR disabled for this session \n"
setarch "$(uname -m)" -R bash --rcfile <(echo "PS1='no-aslr $ '") -i
echo "==== ASLR re-enabled ===="
}


(ojosfuriosos)